{
  "name": "brownfield-ma",
  "description": "This app is a video tutorial site for Turing",

  "scripts": {
    "postdeploy": "rake db:migrate && rake db:seed"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "YOUTUBE_API_KEY": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "image": "heroku/ruby",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.5"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],

  "stack": "heroku-18",

  "environments": {
    "review": {
      "addons": ["heroku-postgresql:hobby-dev"],

      "scripts": {
        "postdeploy": "bundle exec rake db:schema:load db:seed"
      }
    }
  }
}
