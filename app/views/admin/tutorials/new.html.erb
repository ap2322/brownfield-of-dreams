<h2>New Tutorial</h2>

<%= link_to 'Import YouTube Playlist', '/admin/playlist_tutorials/new' %>

<%= form_for [:admin, @tutorial] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "block col-4 field" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "block col-4 field"  %>
  <%= f.label :thumbnail %>
  <%= f.text_field :thumbnail, class: "block col-4 field"  %>

  <h3>Videos</h3>

  <%= f.fields_for :videos do |v| %>
    <%= v.label :title %>
    <%= v.text_field :title, class: "block col-4 field" %>
    <%= v.label :description %>
    <%= v.text_field :description, class: "block col-4 field" %>
    <%= v.label :youtube_url %>
    <%= v.text_field :video_id, class: "block col-4 field" %>
    <%= v.label :thumbnail %>
    <%= v.text_field :thumbnail, class: "block col-4 field" %>
  <% end %>

  <%= f.submit "Save", class: "mt2 btn btn-primary mb1 bg-teal"  %>
<% end %>
